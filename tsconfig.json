{
    "compilerOptions": {
        "target": "ES5",
        "module": "CommonJS",
        "sourceMap": true,
        "outDir": "build",
        "rootDir": "src",
        "strict": true,
        "alwaysStrict": true,
        "types": ["node"],
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "noFallthroughCasesInSwitch": true
    },
    "include": ["src/**/*"]
}
