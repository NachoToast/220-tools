{
    "compilerOptions": {
        "target": "ES5",
        "module": "ES6",
        "sourceMap": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "outDir": "build",
        "rootDir": "src",
        "strict": true,
        "alwaysStrict": true,
        "types": ["node"],
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true
    },
    "include": ["src/**/*"]
}
